---

<Layout title={`${talent.name} - Cipher Agency`}>
    <!-- Hero Section -->
    <section class="pt-32 pb-12 px-6 md:px-12 lg:px-20">
        <div class="max-w-7xl mx-auto">
            <a
                href="/talent"
                class="inline-flex items-center gap-2 text-sm tracking-widest uppercase mb-8 hover:text-accent transition-colors"
            >
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M19 12H5M12 19l-7-7 7-7"></path>
                </svg>
                Back to Roster
            </a>

            <h1 class="heading-xl mb-6 reveal">
                {talent.name.split(" ")[0]}<br />{talent.name.split(" ")[1]}
            </h1>
            <p
                class="text-2xl md:text-3xl text-gray-600 mb-4 reveal"
                style="animation-delay: 0.2s;"
            >
                {talent.role}
            </p>
            <p
                class="text-xl text-accent italic reveal"
                style="animation-delay: 0.3s;"
            >
                "{talent.tagline}"
            </p>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="px-6 md:px-12 lg:px-20 pb-20">
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-3 gap-8 py-12 border-y border-gray-200">
                {
                    talent.stats.map((stat: any, index: number) => (
                        <div
                            class="text-center reveal"
                            style={`animation-delay: ${index * 0.1}s;`}
                        >
                            <div class="text-5xl md:text-6xl font-display font-bold mb-2">
                                {stat.value}
                            </div>
                            <div class="text-sm tracking-widest uppercase text-gray-600">
                                {stat.label}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Bio Section -->
    <section class="px-6 md:px-12 lg:px-20 pb-20">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-4xl md:text-5xl font-display font-bold mb-8 reveal">
                About
            </h2>
            <p
                class="text-xl leading-relaxed text-gray-700 reveal"
                style="animation-delay: 0.2s;"
            >
                {talent.bio}
            </p>
        </div>
    </section>

    <!-- Gallery Section -->
    <section class="px-6 md:px-12 lg:px-20 pb-20">
        <div class="max-w-7xl mx-auto">
            <h2
                class="text-4xl md:text-5xl font-display font-bold mb-12 reveal"
            >
                Portfolio
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {
                    talent.images.map((image: string, index: number) => (
                        <div
                            class="img-hover-container aspect-[4/5] reveal"
                            style={`animation-delay: ${index * 0.1}s;`}
                        >
                            <img
                                src={image}
                                alt={`${talent.name} - Image ${index + 1}`}
                                class="w-full h-full object-cover"
                                loading="lazy"
                            />
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Credits Section -->
    <section
        class="px-6 md:px-12 lg:px-20 pb-32 bg-black text-white -mx-6 md:-mx-12 lg:-mx-20"
    >
        <div class="max-w-4xl mx-auto section-padding">
            <h2
                class="text-4xl md:text-5xl font-display font-bold mb-12 reveal"
            >
                Selected Work
            </h2>

            <div class="space-y-8">
                {
                    talent.credits.map((credit: any, index: number) => (
                        <div
                            class="flex flex-col md:flex-row md:items-center justify-between py-6 border-b border-gray-800 reveal"
                            style={`animation-delay: ${index * 0.1}s;`}
                        >
                            <div>
                                <h3 class="text-2xl font-display font-bold mb-2">
                                    {credit.title}
                                </h3>
                                <p class="text-gray-400">{credit.role}</p>
                            </div>
                            <div class="text-accent text-xl font-display font-bold mt-4 md:mt-0">
                                {credit.year}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="section-padding bg-white text-center">
        <div class="max-w-3xl mx-auto reveal">
            <h2 class="text-4xl md:text-5xl font-display font-bold mb-8">
                Interested in Working<br />with {talent.name.split(" ")[0]}?
            </h2>
            <p class="text-xl text-gray-600 mb-12">
                Contact us to discuss collaboration opportunities and
                availability.
            </p>
            <a href="/contact" class="btn btn-accent"> Get in Touch </a>
        </div>
    </section>

    <!-- GSAP Animations -->
    <script>
        import { gsap } from "gsap";
        import { ScrollTrigger } from "gsap/ScrollTrigger";

        gsap.registerPlugin(ScrollTrigger);

        // Gallery grid animation
        gsap.from(".grid img", {
            scale: 0.8,
            opacity: 0,
            duration: 0.8,
            stagger: 0.15,
            ease: "power3.out",
            scrollTrigger: {
                trigger: ".grid",
                start: "top 70%",
            },
        });
    </script>
</Layout>
