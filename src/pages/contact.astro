---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact - Cipher Agency">
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-6 md:px-12 lg:px-20">
        <div class="max-w-7xl mx-auto">
            <h1 class="heading-xl mb-8 reveal">
                LET'S<br />CONNECT
            </h1>
            <p
                class="text-xl md:text-2xl text-gray-600 max-w-2xl reveal"
                style="animation-delay: 0.2s;"
            >
                Whether you're seeking representation or looking to collaborate,
                we'd love to hear from you.
            </p>
        </div>
    </section>

    <!-- Contact Form & Info -->
    <section class="px-6 md:px-12 lg:px-20 pb-32">
        <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-20">
            <!-- Contact Form -->
            <div class="reveal">
                <form id="contact-form" class="space-y-8">
                    <div>
                        <label
                            for="name"
                            class="block text-sm tracking-widest uppercase mb-3 text-gray-600"
                        >
                            Full Name *
                        </label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full px-0 py-4 border-b-2 border-gray-300 focus:border-black outline-none transition-colors bg-transparent"
                            placeholder="John Doe"
                        />
                        <span class="error-message text-accent text-sm hidden"
                            >Please enter your name</span
                        >
                    </div>

                    <div>
                        <label
                            for="email"
                            class="block text-sm tracking-widest uppercase mb-3 text-gray-600"
                        >
                            Email Address *
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-0 py-4 border-b-2 border-gray-300 focus:border-black outline-none transition-colors bg-transparent"
                            placeholder="john@example.com"
                        />
                        <span class="error-message text-accent text-sm hidden"
                            >Please enter a valid email</span
                        >
                    </div>

                    <div>
                        <label
                            for="phone"
                            class="block text-sm tracking-widest uppercase mb-3 text-gray-600"
                        >
                            Phone Number
                        </label>
                        <input
                            type="tel"
                            id="phone"
                            name="phone"
                            class="w-full px-0 py-4 border-b-2 border-gray-300 focus:border-black outline-none transition-colors bg-transparent"
                            placeholder="+1 (555) 123-4567"
                        />
                    </div>

                    <div>
                        <label
                            for="inquiry"
                            class="block text-sm tracking-widest uppercase mb-3 text-gray-600"
                        >
                            Inquiry Type *
                        </label>
                        <select
                            id="inquiry"
                            name="inquiry"
                            required
                            class="w-full px-0 py-4 border-b-2 border-gray-300 focus:border-black outline-none transition-colors bg-transparent"
                        >
                            <option value="">Select an option</option>
                            <option value="talent"
                                >I'm seeking representation</option
                            >
                            <option value="brand">I'm a brand/company</option>
                            <option value="collaboration"
                                >Collaboration opportunity</option
                            >
                            <option value="other">Other inquiry</option>
                        </select>
                        <span class="error-message text-accent text-sm hidden"
                            >Please select an inquiry type</span
                        >
                    </div>

                    <div>
                        <label
                            for="message"
                            class="block text-sm tracking-widest uppercase mb-3 text-gray-600"
                        >
                            Message *
                        </label>
                        <textarea
                            id="message"
                            name="message"
                            rows="6"
                            required
                            class="w-full px-0 py-4 border-b-2 border-gray-300 focus:border-black outline-none transition-colors bg-transparent resize-none"
                            placeholder="Tell us about yourself and what you're looking for..."
                        ></textarea>
                        <span class="error-message text-accent text-sm hidden"
                            >Please enter a message</span
                        >
                    </div>

                    <div>
                        <button
                            type="submit"
                            class="btn btn-accent w-full md:w-auto"
                        >
                            Send Message
                        </button>
                    </div>

                    <div
                        id="form-success"
                        class="hidden p-6 bg-black text-white text-center"
                    >
                        <p class="text-lg">
                            âœ“ Thank you! We'll be in touch soon.
                        </p>
                    </div>
                </form>
            </div>

            <!-- Contact Information -->
            <div class="reveal" style="animation-delay: 0.2s;">
                <div class="sticky top-32 space-y-12">
                    <!-- Office Locations -->
                    <div>
                        <h3
                            class="text-sm tracking-widest uppercase mb-6 text-gray-600"
                        >
                            Offices
                        </h3>

                        <div class="mb-8">
                            <h4 class="text-2xl font-display font-bold mb-3">
                                New York
                            </h4>
                            <p class="text-gray-600 leading-relaxed">
                                123 Fifth Avenue<br />
                                Suite 2000<br />
                                New York, NY 10011<br />
                                United States
                            </p>
                        </div>

                        <div>
                            <h4 class="text-2xl font-display font-bold mb-3">
                                Los Angeles
                            </h4>
                            <p class="text-gray-600 leading-relaxed">
                                456 Sunset Boulevard<br />
                                Suite 500<br />
                                Los Angeles, CA 90028<br />
                                United States
                            </p>
                        </div>
                    </div>

                    <!-- Contact Details -->
                    <div>
                        <h3
                            class="text-sm tracking-widest uppercase mb-6 text-gray-600"
                        >
                            Get in Touch
                        </h3>
                        <div class="space-y-4">
                            <p>
                                <a
                                    href="mailto:hello@cipher.agency"
                                    class="text-xl hover:text-accent transition-colors"
                                >
                                    hello@cipher.agency
